{
  "ci": {
    "collect": {
      "url": ["/"],
      "staticDistDir": "./docs/performance/static",
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": ["--headless=new", "--disable-dev-shm-usage", "--no-sandbox"],
        "locale": "fr"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": "off",
        "categories:accessibility": "off",
        "categories:best-practices": "off",
        "categories:seo": "off",
        "categories:pwa": "off"
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./docs/performance/raw"
    }
  }
}
